<div>
  <h1>Inscription</h1>
  <%= form_for @utilisateur do |f|%>
    <% f.options[:html][:class] << ' form' %>
    <div>
      <%= f.label :nickname%>
      <%= f.text_field :nickname%>
    </div>

    <div>
      <%= f.label :username%>
      <%= f.text_field :username%>
    </div>

    <div>
      <%= f.label :email%>
      <%= f.text_field :email%>
    </div>

    <div>
      <%= f.label :bio%>
      <%= f.text_field :bio%>
    </div>

    <div>
      <%= f.label :avatar%>
      <%= f.file_field :avatar %>
    </div>

    <div>
      <%= f.label :password%>
      <%= f.password_field :password%>
    </div>

    <%= f.submit %>
  <%end%>
</div>
